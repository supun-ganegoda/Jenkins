// Declarative syntax
pipeline {
	agent any
	 environment {
        dockerHome = tool 'Docker-engine'
        PATH = "${dockerHome}/bin:${PATH}"
    }
    stages {
        stage('Debug') {
            steps {
                sh '''
                    echo "DOCKER_HOST: $DOCKER_HOST"
                    echo "PATH: $PATH"
                    docker version || echo "Failed to connect to Docker"
                '''
            }
        }
    }
} 
